  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "debugger": "nodemon --inspect=9230",
    "build:app": "webpack --mode development --progress --watch",
    "build:server": "webpack --mode development --progress --watch --config webpack.node.js",
    "build:css": "webpack --mode development --progress --watch --config webpack.scss.js",
    "build": "yarn start&yarn build:app&yarn build:server&yarn build:css",
    "pro:app": "webpack --mode production --progress",
    "pro:server": "webpack --mode production --progress --config webpack.node.js",
    "pro:css": "webpack --mode production --progress --config webpack.scss.js",
    "pro": "yarn pro:app&&yarn pro:server&&yarn pro:css",

    "pm2": "pm2 start index.js",
    "pm2:log": "pm2 logs",
    "pm2:restart": "pm2 -p ./ -l ./logs/access.log -e ./logs/error.log -o ./logs/out.log -a --pidFile forever.pid restart index.js",
    "pm2:stop": "pm2 stop index.js"
  },
